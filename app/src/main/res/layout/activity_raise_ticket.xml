<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="com.cdk.onboarding.view.raise_ticket.RaiseTicketMainActivity"
    android:id="@+id/lp_raise_tickets">

    <EditText
        android:id="@+id/txt_raise_ticket_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@android:color/transparent"
        android:enabled="false"
        android:text="@string/menu_item_raise_ticket"
        android:textColor="@color/common_google_signin_btn_text_light_pressed"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txt_ticket_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_raise_ticket_banner"
        android:gravity="center"/>

    <Spinner
        android:id="@+id/spinner_txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txt_ticket_types"
        android:layout_below="@+id/txt_ticket_types"
        android:animateLayoutChanges="true">
    </Spinner>

</RelativeLayout>